<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCancel"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="@string/cancel"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/tvPublish"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="@string/publish"
            android:padding="5dp"
            android:textColor="#05ffd5"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_below="@id/rl_top"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etInput"
            android:hint="想说点什么.."
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:minHeight="40dp"/>
        <com.predict.tide.black.tide.wieght.ItemContainer
            android:id="@+id/ll_add_image"
            android:layout_below="@id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAddImage"
                android:src="@drawable/image_add_bg"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </com.predict.tide.black.tide.wieght.ItemContainer>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_below="@id/rl_middle"
        android:background="@drawable/relativelayout_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/typeLabel"
            android:text="类型"
            android:clickable="false"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/list"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tvCircleSelectType"
            android:text="默认"
            android:clickable="false"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </RelativeLayout>

</RelativeLayout>
